function DesignOption(id, name)
{
	this.id = id;
	this.name = name;
	this.rationale = "";
	this.linkedDecisions = array();
	
	this.toJSON = function()
	{
		return "{id:" +	JSON.stringify(this.id) + 
			", name: \"" + JSON.stringify(this.name) + 
			"\", rationale: \"" + JSON.stringify(this.rationale) + 
		"}";
	};
}
